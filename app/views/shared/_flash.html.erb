<% if flash[:notice] %>
    <div class="bg-blue-100 border-t border-b border-blue-500 text-blue-700 px-4 py-3", role="alert">
        <%= flash[:notice] %>
    </div>
<% end %>
<% if flash[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative", role="alert">
        <%= flash[:alert] %>
    </div>
<% end %>
