 
<% if current_page?(tasks_path) %>
 <li class="border-t border-gray-200">
        <div class="px-4 py-5 sm:px-6">
            <div class="flex flex-wrap items-center justify-between">
                <h3 class="text-lg leading-6 font-medium text-gray-900"><strong><%= task.title %></strong></h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500"><%= task.body %></p>
            </div>
            <div class="mt-4 flex items-center justify-between">
              <% if DateTime.current < task.due_date %>
                <p class="text-sm font-medium text-gray-500">Status: <span class="text-green-600">Active</span></p>
              <% else %>
                 <p class="text-sm font-medium text-gray-500">Status: <span class="text-red-600">Inactive</span></p>
              <% end %>
                <a class="font-medium text-indigo-600 hover:text-indigo-500"><%= task.due_date %></a>
            </div>
        </div>
  </li>
<% else %>
  <div class="px-4 py-5 sm:px-6">
    <div class="items-center justify-between">
        <h3 class="text-lg leading-6 font-medium text-gray-900"><strong><%= task.title %></strong></h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500"><%= task.body %></p>
        <% if DateTime.current < task.due_date %>
          <p class="text-sm font-medium text-gray-500">Status: <span class="text-green-600">Active</span></p>
        <% else %>
          <p class="text-sm font-medium text-gray-500 mt-2">Status: <span class="text-red-600">Inactive</span></p>
        <% end %>
        <a class="font-medium text-indigo-600 hover:text-indigo-500"><%= task.due_date %></a>
    </div>
  </div>
<% end %>