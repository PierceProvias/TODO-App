<div class="container">
  <%= render @task %>
  <%= link_to "Edit this task", edit_task_path(@task), class:"mt-6 ml-6 flex-shrink-0 bg-gray-500 hover:bg-gray-700 border-gray-500 hover:border-gray-700 text-sm border-4 text-white py-1 px-2 rounded"  %> 
  <%= link_to "Back to tasks", tasks_path, class:"mt-6 ml-2 flex-shrink-0 bg-gray-500 hover:bg-gray-700 border-gray-500 hover:border-gray-700 text-sm border-4 text-white py-1 px-2 rounded"  %>
  <%= button_to "Complete", @task, method: :delete, class:"mt-3 ml-6 flex-shrink-0 bg-gray-500 hover:bg-green-700 border-gray-500 hover:border-green-700 text-sm border-4 text-white py-1 px-2 rounded"  %>
</div>